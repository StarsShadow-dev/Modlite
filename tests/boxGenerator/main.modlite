import { print asString } from "StandardLibrary"

function main() void {
	print("5x10")
	printBox(5 10)
	print("15x30")
	printBox(15 30)
	print("30x60")
	printBox(30 60)
	print("100x10")
	printBox(100 10)

}

function printBox(width:number height:number) void {
	var w number
	var h number
	var currentLine string

	w = 0
	h = 0
	currentLine = ""

	while (h < height) {
		while (w < width) {
			switch {
				case (h == 0) {
					switch {
						case (w == 0) {
							currentLine = currentLine .. "┌"
						}
						case (w == width-1) {
							currentLine = currentLine .. "┐"
						}
						case (true) {
							currentLine = currentLine .. "─"
						}
					}
				}
				case (h == height-1) {
					switch {
						case (w == 0) {
							currentLine = currentLine .. "└"
						}
						case (w == width-1) {
							currentLine = currentLine .. "┘"
						}
						case (true) {
							currentLine = currentLine .. "─"
						}
					}
				}
				case (true) {
					switch {
						case (w == 0) {
							currentLine = currentLine .. "│"
						}
						case (w == width-1) {
							currentLine = currentLine .. "│"
						}
						case (true) {
							currentLine = currentLine .. " "
						}
					}
				}
			}
			w = w + 1
		}
		print(currentLine)

		w = 0
		currentLine = ""

		h = h + 1
	}
}